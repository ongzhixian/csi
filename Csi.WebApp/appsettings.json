{
  "Kestrel": {
    "Endpoints": {
      "Localhost": {
        "Url": "http://localhost:35000"
      },
      "Http": {
        "ZX_Comment1": "No HTTPS; HAProxy handles HTTPS on MY production server",
        "ZX_Comment2": "The Http section is an arbituary name; it really looking for Url.",
        "ZX_Comment3": "So we cannot have https in Url (else Kestrel will try to bind)",
        "ZX_Comment4": "So just add note to remind ourselves, Url use to be https://localhost:35001",
        "Url": "http://localhost:35001"
      }
    }
  },
  "ConnectionStrings": {
    "CsiDatabase": "server=;uid=;pwd=;database="
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.RollingFile" ],
        "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {SourceContext}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": ".\\Logs\\app.log",
                    "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}"

                }
            },
            {
                "Name": "RollingFile",
                "Args": {
                    "MinimumLevel": "Verbose",
                    "pathFormat": "Logs/log-{Date}.log",
                    "outputTemplate": "[{Timestamp:o} {Level:u3}] {Message:lj} {SourceContext}{A}{B}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "Sample"
        }
    },
  "AllowedHosts": "*"
}