<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LookMeUp</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/spectre/spectre.css" />
        <link rel="stylesheet" href="~/css/spectre/spectre-exp.css" />
        <link rel="stylesheet" href="~/css/spectre/spectre-icons.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="//unpkg.com/spectre.css/dist/spectre.min.css" asp-fallback-href="~/css/spectre/spectre.css" />
        <link rel="stylesheet" href="//unpkg.com/spectre.css/dist/spectre-exp.min.css" asp-fallback-href="~/css/spectre/spectre-exp.css" />
        <link rel="stylesheet" href="//unpkg.com/spectre.css/dist/spectre-icons.min.css" asp-fallback-href="~/css/spectre/spectre-icons.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    
    <header class="navbar">
        <section class="navbar-section">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand mr-2">LookMeUp</a>
            <a asp-area="" asp-controller="Home" asp-action="About" class="btn btn-link">About</a>
            <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-link">Manage</a>
            <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-link">Contact</a>

        </section>
        <!-- TODO: Another day
        <section class="navbar-center">
            <div class="input-group input-inline">
                <input class="form-input" type="text" placeholder="search">
                <button class="btn btn-primary input-group-btn">Search</button>
            </div>
        </section>
        -->
        <section class="navbar-section">
            Current user: Zhixian
        </section>
    </header>

    <partial name="_CookieConsentPartial" />
    
    @RenderBody()

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
