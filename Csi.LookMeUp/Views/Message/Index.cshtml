@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
  <div class="columns">
    <div class="column col-3"></div>
    <div class="column col-6">
        <h1>Add message</h1>
        <p>Use the below form save a message that you would like to share with others.</p>

        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-3 col-sm-12">
                    <label class="form-label" for="message_title">Title</label>
                </div>
                <div class="col-9 col-sm-12">
                    <input class="form-input" type="text" id="message_title" placeholder="Message title">
                </div>
            </div>
            <!-- form structure -->
            <div class="form-group">
                <div class="col-3 col-sm-12">
                    <label class="form-label" for="message_content">Message</label>
                </div>
                <div class="col-9 col-sm-12">
                    <textarea class="form-input" id="message_content" placeholder="Message content" rows="8"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-12 col-sm-12">
                    <button class="btn btn-primary float-right">Save</button>
                </div>
            </div>

        </form>
    </div>
    <div class="column col-3"></div>
  </div>

  
</div>

