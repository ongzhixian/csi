@model RegisterAccountViewModel
@{
    ViewData["Title"] = "Register account";
}

<div class="container">
    <div class="columns">
    
    <div class="column col-xs-6">
        <h1>Register new account</h1>


        @using (Html.BeginForm("RegisterAsync", "Account", FormMethod.Post, new {@class="form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <div class="col-3 col-sm-12">
                    @Html.LabelFor(m => m.Username, null, new {@class="form-label"} )
                </div>
                <div class="col-6 col-sm-12">
                    @Html.TextBoxFor(m => m.Username,new {@class="form-input validIf-not-empty", placeholder="Desired username here."} )
                </div>
            </div>

            <div class="form-group">
                <div class="col-3 col-sm-12">
                    @Html.LabelFor(m => m.GivenName, null, new {@class="form-label"} )
                </div>
                <div class="col-6 col-sm-12">
                    @Html.TextBoxFor(m => m.GivenName,new {@class="form-input validIf-not-empty", placeholder="Your given name here."} )
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-3 col-sm-12">
                    @Html.LabelFor(m => m.Password1, null, new {@class="form-label"} )
                </div>
                <div class="col-6 col-sm-12">
                    @Html.PasswordFor(m => m.Password1,new {@class="form-input validIf-not-empty", placeholder="Password 1 here."} )
                </div>
            </div>

            <div class="form-group has-error">
                <div class="col-3 col-sm-12">
                    @Html.LabelFor(m => m.Password2, null, new {@class="form-label"} )
                </div>
                <div class="col-6 col-sm-12">
                    @Html.PasswordFor(m => m.Password2,new {@class="form-input validIf-not-empty", placeholder="Password 2 here."} )
                    <p class="form-input-hint">The name is invalid.</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-3 col-sm-12"></div>
                <div class="col-6 col-sm-12">
                    <button type="submit" class="btn">Register</button>
                </div>
            </div>
        }

    </div>
    <div class="column col-xs-6">

        
    </div>
  </div>
</div>

