@model LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}



<div class="container">
    <div class="columns">
    
    <div class="column col-xs-6">
        <h1>
            Log in
        </h1>

        @using (Html.BeginForm("LoginAsync", "Account", FormMethod.Post, new {@class="form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <div class="col-3 col-sm-12">
                    @Html.LabelFor(m => m.Username, null, new {@class="form-label"} )
                </div>
                <div class="col-6 col-sm-12">
                    @Html.TextBoxFor(m => m.Username,new {@class="form-input", placeholder="Username here."} )
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-3 col-sm-12">
                    @Html.LabelFor(m => m.Password, null, new {@class="form-label"} )
                </div>
                <div class="col-6 col-sm-12">
                    @Html.PasswordFor(m => m.Password,new {@class="form-input", placeholder="Password here."} )
                </div>
            </div>

            <div class="form-group">
                <div class="col-3 col-sm-12"></div>
                <div class="col-6 col-sm-12">
                    <button type="submit" class="btn">Log in</button>
                </div>
            </div>
        }

    </div>
    <div class="column col-xs-6">

        <h1>External logins</h1>

        <a href="#">Google login</a>

        @User.Identity.Name
    </div>
  </div>
</div>
